# GhostShell Environment Configuration
# Copy this file to .env and fill in your values

# Database URL (localhost for local development)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ghostshell

# Shannon Service URL (localhost for local development)
SHANNON_SERVICE_URL=http://localhost:3001

# Clerk Authentication
# Get your keys from: https://dashboard.clerk.com/
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key
CLERK_SECRET_KEY=sk_test_your_secret_key

# Next.js settings
NEXT_TELEMETRY_DISABLED=1

# Stripe Billing Configuration
# Get your keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_test_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_PRICE_PRO_MONTHLY=price_your_pro_monthly_price_id
STRIPE_PRICE_PRO_ANNUAL=price_your_pro_annual_price_id
